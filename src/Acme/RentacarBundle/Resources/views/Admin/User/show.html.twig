{% extends "AcmeRentacarBundle:Admin:base.html.twig" %}

{% block page_title 'ユーザ詳細' %}
{% set menu = 'user' %}

{% block content %}
<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>ID</th>
      <td>{{ user.id }}</td>
    </tr>
    <tr>
      <th>名前</th>
      <td>{{ user.name }}</td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>{{ user.email }}</td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td>{{ user.tel }}</td>
    </tr>
    <tr>
      <th>誕生日</th>
      <td>{{ user.birthday|date('Y/m/d') }}</td>
    </tr>
    <tr>
      <th>登録日</th>
      <td>{{ user.createdAt|date('Y/m/d H:i') }}</td>
    </tr>
  </tbody>
</table>
{% endblock %}
