{% extends "AcmeRentacarBundle:Admin:base.html.twig" %}

{% block page_title 'ユーザ一覧' %}
{% set menu = 'user' %}

{% block content %}
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>誕生日</th>
      <th>登録日</th>
    </tr>
  </thead>
  <tbody>
    {% for user in pagination %}
      <tr>
        <td><a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.id }}</a></td>
        <td><a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.name }}</a></td>
        <td>{{ user.email }}</td>
        <td>{{ user.tel }}</td>
        <td>{{ user.birthday|date('Y/m/d') }}</td>
        <td><a href="{{ path('admin_user_show', {'id': user.id}) }}">{{ user.createdAt|date('Y/m/d H:i') }}</a></td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{{ pagination.render()|raw }}
{% endblock %}
